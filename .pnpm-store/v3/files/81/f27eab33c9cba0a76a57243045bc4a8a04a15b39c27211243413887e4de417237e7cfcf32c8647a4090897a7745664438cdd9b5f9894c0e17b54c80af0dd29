import { Action } from '@ngrx/store';
import { User } from '../<%= containerToCorePath %>/store/user/user.model';

export enum <%= classify(name) %>ActionTypes {
  LOAD_DATA = '[<%= classify(name) %>] load data',
  CLEANUP = '[<%= classify(name) %>] cleanup',
}

/** Action for loading required DB data. */
export class LoadData implements Action {
  readonly type = <%= classify(name) %>ActionTypes.LOAD_DATA;

  constructor(public payload: {
    currentUser: User,
  }, public correlationId: string) { }
}

/** Action for cleaning up loading subscriptions. */
export class Cleanup implements Action {
  readonly type = <%= classify(name) %>ActionTypes.CLEANUP;
  constructor(public correlationId: string) { }
}

export type <%= classify(name) %>Actions =
  LoadData |
  Cleanup;
