<div class="login-container" *ngIf="{ user: currentUser$ | async } as data">
  <ng-container *ngIf="data.user">
    <img class="profile" [src]="data.user.photoURL" referrerpolicy="no-referrer"/>
    <h2>Hello {{data.user.name}}!</h2>
    <input type="submit" value="Logout" (click)="logout$.next()">
  </ng-container>
  <ng-container *ngIf="!data.user">
    <h2>Hello!</h2>
    <input type="submit" value="Login" (click)="login$.next()">
  </ng-container>
</div>
